{
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "outDir": "./dist",
    "rootDir": "./src",

    /* Path Alias Setup */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* Module Settings */
    "moduleResolution": "Node",
    "module": "CommonJS",

    /* Library and Declaration Files */
    "lib": ["esnext"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
